{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "../../dist",
        "target": "ESNext",
        "lib": [
            "DOM",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "es2020",
            "ESNext",
        ],
        "strict": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "paths": {
            "app/*": ["./*"]
        }
    },
    "include": ["./index.tsx"],
}
